set -e
echo "publishing all artifacts"
echo
./gradlew publishToMavenLocal
./gradlew publish

echo
echo "Creating plugin"
echo
./gradlew buildInstallablePlugin

echo
echo "building CLI tools"
echo
bin/local_jrelease
bin/local_release

echo
echo "Deploying site"
echo
./bin/deploy_site
